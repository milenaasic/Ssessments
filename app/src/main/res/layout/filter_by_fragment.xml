<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:paddingBottom="16dp">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/lightGrey"
                android:id="@+id/razdelnik2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="1dp" app:srcCompat="@color/colorPrimaryDark"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/to_date_picker"
                app:layout_constraintTop_toBottomOf="@+id/to_date_picker" android:layout_marginTop="4dp"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/lightGrey"
                android:id="@+id/razdelnik3"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />

        <TextView
                android:id="@+id/ssessments_spinner_title"
                android:text="@string/ssessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"/>
        <TextView
                android:text="@string/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/region_spinner_title"
                tools:text="Region"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/razdelnik2"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:id="@+id/spinner_region"
                app:layout_constraintStart_toStartOf="@+id/region_spinner_title"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/region_spinner_title"
                android:background="@drawable/oval_shape_purple_stroke"/>


        <TextView
                android:text="@string/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_spinner_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="@+id/spinner_region"
                app:layout_constraintTop_toBottomOf="@+id/spinner_region" android:layout_marginTop="24dp"/>


        <TextView
                android:text="From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/from_date_picker"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2" android:textSize="18sp"
                android:textColor="@android:color/darker_gray"/>
        <TextView
                android:text="To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to_date_picker"
                app:layout_constraintTop_toTopOf="@+id/from_date_picker"
                app:layout_constraintBottom_toBottomOf="@+id/from_date_picker"
                android:textColor="@android:color/darker_gray" android:textSize="18sp"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/crtica" android:layout_marginStart="8dp"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:id="@+id/spinner_product"
                app:layout_constraintStart_toStartOf="@+id/product_spinner_title"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/product_spinner_title"
                android:background="@drawable/oval_shape_purple_stroke"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:id="@+id/spinner_ssessments"
                app:layout_constraintStart_toStartOf="@+id/ssessments_spinner_title" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ssessments_spinner_title"
                android:background="@drawable/oval_shape_purple_stroke"/>
        <TextView
                android:text="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/language_spinner_title"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_ssessments"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:id="@+id/spinner_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/language_spinner_title"
                app:layout_constraintStart_toStartOf="@+id/language_spinner_title"
                android:background="@drawable/oval_shape_purple_stroke"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline2"
                app:layout_constraintGuide_percent="0.26"/>
        <Button
                android:text="@string/apply_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/apply_filter_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="@+id/reset_button"/>
        <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_filter_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/razdelnik3"
                android:backgroundTint="@color/colorPrimaryDark"/>
        <Button
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reset_button"
                app:layout_constraintEnd_toStartOf="@+id/apply_filter_button"
                app:layout_constraintTop_toTopOf="@+id/save_filter_button"
                app:layout_constraintBottom_toBottomOf="@+id/save_filter_button"
                android:textColor="@color/colorPrimary" android:backgroundTint="@color/colorPrimaryDark"
                app:layout_constraintStart_toEndOf="@+id/save_filter_button"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content" android:id="@+id/guideline5"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.5"/>
        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp" app:srcCompat="@drawable/ic_outline_date_range_24px"
                android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="@+id/spinner_product"
                android:tint="@color/colorPrimaryDark" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/date_range_title"/>
        <TextView
                android:text="Date Range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_range_title" tools:text="Date Range"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="@+id/spinner_product"
                android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/spinner_product"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="1dp" app:srcCompat="@color/colorPrimaryDark"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toStartOf="@+id/from_date_picker"
                app:layout_constraintTop_toBottomOf="@+id/from_date_picker" android:layout_marginTop="4dp"/>
        <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/crtica" app:layout_constraintStart_toEndOf="@+id/imageView4"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/from_date_picker"
                app:layout_constraintBottom_toBottomOf="@+id/from_date_picker"
                android:textColor="@android:color/darker_gray" android:textSize="18sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>