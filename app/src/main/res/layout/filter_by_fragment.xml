<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/lightGrey"
                android:id="@+id/razdelnik3"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/language_spinner_title"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/lightGrey"
                android:id="@+id/razdelnik2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/to_date_picker"/>
        <TextView
                android:id="@+id/date_from"
                android:text="From"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                tools:text="From" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/date_range_textView"/>
        <TextView
                android:id="@+id/to_date"
                android:text="To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="To"
                app:layout_constraintStart_toEndOf="@+id/from_date_picker"
                android:layout_marginStart="64dp"
                app:layout_constraintTop_toTopOf="@+id/from_date_picker"
                app:layout_constraintBottom_toBottomOf="@+id/from_date_picker"/>

        <TextView
                android:id="@+id/ssessments_spinner_title"
                android:text="@string/ssessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="@+id/product_spinner_title"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/product_spinner_title"/>
        <TextView
                android:text="@string/region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/region_spinner_title"
                tools:text="Region"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_region"
                app:layout_constraintTop_toTopOf="@+id/region_spinner_title"
                app:layout_constraintBottom_toBottomOf="@+id/region_spinner_title"
                app:layout_constraintStart_toStartOf="@+id/guideline2"/>


        <TextView
                android:text="@string/product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_spinner_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="@+id/region_spinner_title"
                android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/region_spinner_title"/>


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp" app:srcCompat="@color/lightGrey"
                android:id="@+id/razdelnik"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/spinner_ssessments"/>
        <TextView
                android:text="Today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/from_date_picker"
                app:layout_constraintTop_toTopOf="@+id/date_from"
                app:layout_constraintBottom_toBottomOf="@+id/date_from"
                app:layout_constraintStart_toEndOf="@+id/date_from" android:layout_marginStart="24dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to_date_picker" app:layout_constraintStart_toEndOf="@+id/to_date"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/to_date" app:layout_constraintBottom_toBottomOf="@+id/to_date"/>
        <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_product"
                app:layout_constraintEnd_toEndOf="@+id/spinner_region"
                app:layout_constraintTop_toTopOf="@+id/product_spinner_title"
                app:layout_constraintBottom_toBottomOf="@+id/product_spinner_title"
                app:layout_constraintStart_toStartOf="@+id/guideline2"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_ssessments" app:layout_constraintEnd_toEndOf="@+id/spinner_product"
                app:layout_constraintTop_toTopOf="@+id/ssessments_spinner_title"
                app:layout_constraintBottom_toBottomOf="@+id/ssessments_spinner_title"/>
        <TextView
                android:text="Date Range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_range_textView" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/razdelnik" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/razdelnik2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:id="@+id/language_spinner_title"/>
        <Spinner
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_language"
                app:layout_constraintTop_toTopOf="@+id/language_spinner_title"
                app:layout_constraintBottom_toBottomOf="@+id/language_spinner_title"
                app:layout_constraintStart_toEndOf="@+id/language_spinner_title" android:layout_marginStart="32dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline2"
                app:layout_constraintGuide_percent="0.26"/>
        <Button
                android:text="@string/apply_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/apply_filter_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="@+id/save_filter_button"
                app:layout_constraintBottom_toBottomOf="@+id/save_filter_button"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:textColor="@color/colorPrimaryDark"/>
        <Button
                android:text="SAVE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_filter_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:textColor="@color/colorPrimaryDark" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/razdelnik3" android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"/>
        <Button
                android:text="Reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reset_button"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintEnd_toStartOf="@+id/apply_filter_button"
                app:layout_constraintStart_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="@+id/save_filter_button"
                app:layout_constraintBottom_toBottomOf="@+id/save_filter_button"
                android:textColor="@color/colorPrimaryDark"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>