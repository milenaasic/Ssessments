<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView
            android:id="@+id/date_from"
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            tools:text="From" android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/chipGroup"/>
    <TextView
            android:id="@+id/to_date"
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="To"
            app:layout_constraintStart_toEndOf="@+id/from_date_picker"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/from_date_picker"
            app:layout_constraintBottom_toBottomOf="@+id/from_date_picker"/>
    <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:id="@+id/chipGroup"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/ssessments_spinner_title"
            app:layout_constraintStart_toStartOf="@+id/ssessments_spinner_title">

        <com.google.android.material.chip.Chip

                android:id="@+id/chip_1"
                android:text="@string/chip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_2"
                android:text="@string/chip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_3"
                android:text="@string/chip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_4"
                android:text="@string/chip_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_5"
                android:text="@string/chip_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_6"
                android:text="@string/chip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

    </com.google.android.material.chip.ChipGroup>
    <TextView
            android:id="@+id/ssessments_spinner_title"
            android:text="@string/ssessment"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/chipGroup2"/>
    <TextView
            android:text="@string/region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/region_spinner_title"
            tools:text="Region"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_region"
            app:layout_constraintStart_toEndOf="@+id/region_spinner_title"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/region_spinner_title"
            app:layout_constraintBottom_toBottomOf="@+id/region_spinner_title"/>


    <TextView
            android:text="@string/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/product_spinner_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@+id/region_spinner_title"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/region_spinner_title"/>

    <com.google.android.material.chip.ChipGroup
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/product_spinner_title"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/product_spinner_title" android:id="@+id/chipGroup2"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp">

        <com.google.android.material.chip.Chip

                android:id="@+id/chip_21"
                android:text="@string/chip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_22"
                android:text="@string/chip_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_23"
                android:text="@string/chip_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_24"
                android:text="@string/chip_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_25"
                android:text="@string/chip_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

        <com.google.android.material.chip.Chip
                android:id="@+id/chip_26"
                android:text="@string/chip_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/state_color_text_highllight"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china"/>

    </com.google.android.material.chip.ChipGroup>


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp" app:srcCompat="@color/lightGrey"
            android:id="@+id/razdelnik"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"/>
    <TextView
            android:text="Today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/from_date_picker"
            app:layout_constraintTop_toTopOf="@+id/date_from" app:layout_constraintBottom_toBottomOf="@+id/date_from"
            app:layout_constraintStart_toEndOf="@+id/date_from" android:layout_marginStart="24dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/to_date_picker" app:layout_constraintStart_toEndOf="@+id/to_date"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="@+id/to_date" app:layout_constraintBottom_toBottomOf="@+id/to_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>