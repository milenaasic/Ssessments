<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
<androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".filter_activity.ServicetypeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/servicelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/serviceTextView"
                android:text="Service Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:text="Service Type"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>


        <com.google.android.material.chip.ChipGroup
                android:id="@+id/serviceChipGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/serviceTextView"
                android:scrollbars="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/serviceTextView"
                app:singleSelection="false"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp">

            <com.google.android.material.chip.Chip
                    android:id="@+id/sechip0"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="All"
                    app:checkedIconVisible="true" />


            <com.google.android.material.chip.Chip
                    android:id="@+id/sechip1"
                    android:text="Brazil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Brazil"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip2"
                    android:text="Canada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Canada"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip3"
                    android:text="Latin America"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Latin America"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip4"
                    android:text="Mexico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Mexico"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip5"
                    android:text="US"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="US"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip6"
                    android:text="p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="p"/>
            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip7"
                    android:text="Latin America"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Latin America"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip8"
                    android:text="Mexico"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="Mexico"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip9"
                    android:text="US"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="US"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip10"
                    android:text="p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="p"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip11"
                    android:text="US"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="US"/>

            <com.google.android.material.chip.Chip

                    android:id="@+id/sechip12"
                    android:text="p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                    tools:text="p"/>

        </com.google.android.material.chip.ChipGroup>



        <View
                android:id="@+id/sedivider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                tools:layout_editor_absoluteX="16dp"
                app:layout_constraintTop_toBottomOf="@+id/serviceChipGroup"
                android:layout_marginTop="16dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/resetfilterButtonServices"
            android:text="@string/reset_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/servicelayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/applyfilterButtonServices" android:layout_marginEnd="4dp"
    />



    <com.google.android.material.button.MaterialButton
            android:id="@+id/applyfilterButtonServices"
            android:text="@string/apply_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/resetfilterButtonServices" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/resetfilterButtonServices"
            app:layout_constraintBottom_toBottomOf="@+id/resetfilterButtonServices"/>




</androidx.constraintlayout.widget.ConstraintLayout>
</layout>