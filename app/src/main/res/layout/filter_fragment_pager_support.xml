<?xml version="1.0" encoding="utf-8"?>

<androidx.viewpager.widget.ViewPager

        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/my_view_pager"
        android:layout_width="match_parent"
        android:layout_height="1200dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/filters_tablayout"
            app:tabTextColor="@color/logoPurpleMatchingSecondary"
            app:tabIndicatorColor="@color/logoPurpleMatchingSecondary" app:tabMode="fixed">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter By" android:id="@+id/tab1_filterby"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Filters" android:id="@+id/tab2_myfilters"/>

    </com.google.android.material.tabs.TabLayout>
</androidx.viewpager.widget.ViewPager>
