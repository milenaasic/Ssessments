<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="singleFilterItem" type="com.ssessments.database.FilterItem"/>
        <variable name="myfilterclickListener" type="com.ssessments.filter_fragments.FilterItemClickListener"/>
        <variable name="myDeleteClickListener" type="com.ssessments.filter_fragments.FilterItemDeleteClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/root_layout"
            android:layout_width="match_parent"
            android:layout_height="64dp">

        <ImageView
                android:id="@+id/close_button"
                android:onClick="@{() -> myDeleteClickListener.onClick(singleFilterItem)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_close_24px"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/dark_grey"/>
        <TextView
                android:id="@+id/filter_name"
                android:onClick="@{() -> myfilterclickListener.onClick(singleFilterItem)}"
                app:filter_name_string="@{singleFilterItem}"
                android:text="My Filter 1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/lorem"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/dark_grey"
                android:background="?attr/selectableItemBackground"/>


        <TextView
                android:id="@+id/region_textview"
                app:region_string="@{singleFilterItem}"
                android:text="China"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="China"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintStart_toStartOf="@+id/filter_name" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/filter_name" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/logoDeepBlue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>