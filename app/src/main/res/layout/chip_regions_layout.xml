<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/hor_scrool_for_chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
         >

    <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_regions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            app:singleLine="true">

        <com.google.android.material.chip.Chip

                android:id="@+id/chip_SEA"
                android:text="@string/region_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="china" />

        <com.google.android.material.chip.Chip

                android:id="@+id/chip_NEA"
                android:text="@string/region_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
              app:checkedIconEnabled="true"
                tools:text="china" />

        <com.google.android.material.chip.Chip

                android:id="@+id/chip_Indian"
                android:text="@string/region_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/state_color_highlight"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:checkedIconEnabled="true"
                tools:text="china" />

        <com.google.android.material.chip.Chip

            android:id="@+id/chip_Indian2"
            android:text="@string/region_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipBackgroundColor="@color/state_color_highlight"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:checkedIconEnabled="true"
            tools:text="china" />

    </com.google.android.material.chip.ChipGroup>

</HorizontalScrollView>

