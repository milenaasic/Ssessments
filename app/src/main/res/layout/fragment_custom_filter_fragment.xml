<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".filter_activity.CustomFilterFragment"
        android:id="@+id/rootConstlayout">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:id="@+id/marketsConsLayout"
                                                       android:layout_marginTop="8dp">

        <TextView
                android:id="@+id/marketstext"
                android:text="@string/markets_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Markets"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/marketsesubtitl"
                android:text="All Markets"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/marketstext"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/marketstext"
                android:maxLines="3" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:ellipsize="end"/>
        <View
                android:id="@+id/markDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/marketsesubtitl"
                android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                       android:layout_height="wrap_content"
                                                       android:id="@+id/productConstraintLayout"
                                                       app:layout_constraintTop_toBottomOf="@+id/marketsConsLayout"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       android:layout_marginTop="8dp">

        <TextView
                android:id="@+id/productstext"
                android:text="Products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:text="Products"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/productssubtitl"
                android:text="All Products"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/productstext"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/productstext" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:maxLines="2" android:ellipsize="end"/>
        <View
                android:id="@+id/prodDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintTop_toBottomOf="@+id/productssubtitl"
                android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       android:id="@+id/ssessmentsConstLayout"
                                                       app:layout_constraintHorizontal_bias="0.0"
                                                       app:layout_constraintTop_toBottomOf="@+id/productConstraintLayout"
                                                       android:layout_marginTop="8dp">

        <TextView
                android:id="@+id/ssessmenttext"
                android:text="Services"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:text="Services"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/ssessmenntsubtitl"
                android:text="All Services"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/ssessmenttext"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/ssessmenttext" android:maxLines="2"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:ellipsize="end"/>
        <View
                android:id="@+id/langDivider"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/ssessmenntsubtitl"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/languageConstLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ssessmentsConstLayout">

        <TextView
                android:id="@+id/languagtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Language"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Language" />

        <HorizontalScrollView
                android:id="@+id/languagehorizontalscroolview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:scrollbarSize="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languagtext">

            <com.google.android.material.chip.ChipGroup
                    android:id="@+id/languageChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:scrollbars="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/languagtext"
                    app:layout_constraintTop_toBottomOf="@+id/languagtext"
                    app:singleLine="true"
                    app:singleSelection="true">

                <com.google.android.material.chip.Chip
                        android:id="@+id/chipEnglish"
                        style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="English" />

                <com.google.android.material.chip.Chip
                        android:id="@+id/chipVietnamese"
                        style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vietnamese" />

                <com.google.android.material.chip.Chip
                        android:id="@+id/chipBahamaIndonesia"
                        style="@style/Widget.MaterialComponents.Chip.Filter.MyChip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bahama Indonesia" />

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <View
                android:id="@+id/langDiv"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/languagehorizontalscroolview" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/daterangelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/languageConstLayout" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp">


        <TextView
                android:id="@+id/daterangeView"
                android:text="@string/date_range_date_picker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:text="Date Range"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/activitydatefrom"
                android:text="@string/from_date_picker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toStartOf="@+id/daterangeView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/daterangeView" android:textAllCaps="true"/>

        <TextView
                android:id="@+id/activityfromDatePicker"
                android:text="@string/select_from_to_datepicker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintStart_toStartOf="@+id/activitydatefrom"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activitydatefrom"
                android:textColor="@color/materialgrey800"/>
        <View
                android:id="@+id/divider5"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toTopOf="@+id/activitydatefrom"
                app:layout_constraintBottom_toBottomOf="@+id/activityfromDatePicker"
                app:layout_constraintStart_toEndOf="@+id/activityfromDatePicker" android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/activitydateto"
                android:text="@string/to_date_picker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                app:layout_constraintStart_toEndOf="@+id/divider5"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/activitydatefrom"
                app:layout_constraintBottom_toBottomOf="@+id/activitydatefrom" android:textAllCaps="true"/>

        <TextView
                android:id="@+id/activitytoDatePicker"
                android:text="@string/select_from_to_datepicker_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintStart_toStartOf="@+id/activitydateto" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/activitydateto" android:textColor="@color/materialgrey800"/>

        <View
                android:id="@+id/divider6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@+id/activitytoDatePicker"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/resetfilterButton"
            android:text="@string/reset_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/daterangelayout" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/savefilterButton" android:layout_marginEnd="4dp"
            app:layout_constraintVertical_bias="0.502"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/savefilterButton"
            android:text="@string/save_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/apply_button_disable_color_state"
            app:layout_constraintStart_toEndOf="@+id/resetfilterButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/applyfilterButton" android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/resetfilterButton"
            app:layout_constraintBottom_toBottomOf="@+id/resetfilterButton"/>


    <com.google.android.material.button.MaterialButton
            android:id="@+id/applyfilterButton"
            android:text="@string/apply_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/savefilterButton" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/savefilterButton"
            app:layout_constraintBottom_toBottomOf="@+id/savefilterButton"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>


