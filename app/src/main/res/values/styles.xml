<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/helvetica</item>

     </style>

     <style name="NotiificationActivityTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
         <item name="colorPrimary">@color/white</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
         <item name="android:fontFamily">@font/helvetica</item>

     </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog"/>

    <style name="MyAlertDialogThemeForLogIn" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="my_toolbar_style_filter_activity" parent="ThemeOverlay.MaterialComponents.ActionBar">

    </style>

    <style name="my_toolbar_notific__activity" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="my_toolbar_notific__activity_pop_up" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>


     <style name="TextAppearance.AppTheme.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
         <item name="android:textStyle">normal</item>
         <item name="android:textAllCaps">false</item>
         <item name="android:textSize">24sp</item>
         <item name="android:letterSpacing">0</item>
     </style>

     <style name="TextAppearance.AppTheme.Medium" parent="TextAppearance.AppCompat.Medium">
         <item name="android:textSize">18sp</item>
     </style>

     <style name="TextAppearance.AppTheme.Large" parent="TextAppearance.AppCompat.Medium">
         <item name="android:textSize">20sp</item>
     </style>


     <style name="MyLogInAndRegistrationActivityTheme" parent="AppTheme">
         <item name="android:windowFullscreen">true</item>
         <item name="colorAccent">@color/colorPrimaryDark</item>
     </style>


     <style name="myToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
         <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/helvetica</item>
        <item name="android:elevation">0dp</item>

    </style>





   <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
       <item name="android:textColor">@color/colorPrimaryDark</item>
       <item name="android:layout_marginEnd">8dp</item>
       <!--<item name="android:textAppearance">@style/MyTextAppearanceDialogButton</item>-->
   </style>

   <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
       <item name="android:textColor">@color/colorPrimaryDark</item>
       <item name="android:layout_marginEnd">8dp</item>
   </style>

   <style name="MyTextAppearanceDialogButton" parent="TextAppearance.AppCompat.Button">
       <item name="android:textStyle">bold</item>
   </style>

   <style name="ToolbarFilterTitleStyle" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textColor">@color/colorAccent</item>
    <item name="android:textSize">16sp</item>
    </style>

    <style name="TabItemStyle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
     </style>




   <style name="MyButtonSmall" parent="Widget.AppCompat.Button.Small">
       <item name="android:textColor">@color/logoPurple</item>
       <item name="android:textStyle">bold</item>

   </style>

   <style name="MyButton" parent="Widget.AppCompat.Button.Borderless.Colored">
       <item name="android:textColor">@color/colorPrimary</item>
       <item name="android:textSize">10sp</item>
       <item name="android:minWidth">48dp</item>
       <item name="android:minHeight">28dp</item>


   </style>

   <style name="MyButtonPressed" parent="Widget.AppCompat.Button.Borderless.Colored">
       <item name="android:textColor">@color/logoPurple</item>
       <item name="android:textSize">10sp</item>
       <item name="android:minWidth">48dp</item>
       <item name="android:minHeight">28dp</item>
       <item name="android:textStyle">bold</item>

   </style>
    <style name="detailnews_TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>

    <style name="Widget.MaterialComponents.Chip.Filter.MyChip">
        <item name="android:textColor">@color/my_chip_text_color</item>
        <item name="chipStrokeColor">@color/my_chip_stroke_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/my_chip_background_color</item>


    </style>


</resources>
